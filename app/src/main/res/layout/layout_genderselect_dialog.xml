<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_dialog_privacy_police"
    android:paddingLeft="16dp"
    android:paddingTop="20dp"
    android:paddingRight="16dp"
    android:paddingBottom="50dp">


    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:maxLines="2"
        android:text="请选择您的性别"
        android:textColor="#161B1E"
        android:textSize="21sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/iv_gender_man"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:padding="25dp"
        android:src="@mipmap/icon_gender_man"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/iv_gender_woman"
        app:layout_constraintTop_toBottomOf="@+id/tv_title" />

    <ImageView
        android:id="@+id/iv_gender_woman"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:padding="25dp"
        android:src="@mipmap/icon_gender_woman"
        app:layout_constraintLeft_toRightOf="@+id/iv_gender_man"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_title" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="男生"
        android:textColor="#161B1E"
        android:textSize="14sp"
        app:layout_constraintLeft_toLeftOf="@+id/iv_gender_man"
        app:layout_constraintRight_toRightOf="@+id/iv_gender_man"
        app:layout_constraintTop_toBottomOf="@+id/iv_gender_man" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="女生"
        android:textColor="#161B1E"
        android:textSize="14sp"
        app:layout_constraintLeft_toLeftOf="@+id/iv_gender_woman"
        app:layout_constraintRight_toRightOf="@+id/iv_gender_woman"
        app:layout_constraintTop_toBottomOf="@+id/iv_gender_woman" />

    <ImageView
        android:id="@+id/iv_close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/ic_page_close"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</android.support.constraint.ConstraintLayout>