<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="MDShadow">
        <!-- 阴影相关 -->
        <attr name="md_shadow_offset_y" format="dimension" />
        <attr name="md_shadow_offset_x" format="dimension" />
        <attr name="md_shadow_color" format="color|reference" />
        <attr name="md_shadow_blur" format="dimension" />

        <!-- 背景相关 -->
        <attr name="md_radius" format="dimension" />
        <attr name="md_bottom_left_radius" format="dimension" />
        <attr name="md_bottom_right_radius" format="dimension" />
        <attr name="md_top_left_radius" format="dimension" />
        <attr name="md_top_right_radius" format="dimension" />
        <attr name="md_solid_color" format="color" />
        <attr name="md_stroke_width" format="dimension" />
        <attr name="md_stroke_color" format="color" />
        <attr name="md_dash_width" format="dimension" />
        <attr name="md_dash_gap" format="dimension" />
        <!-- 渐变颜色 -->
        <attr name="md_start_color" format="color" />
        <attr name="md_end_color" format="color" />
        <attr name="md_color_orientation" format="enum">
            <enum name="left_to_right" value="0" /><!-- 左到右 -->
            <enum name="right_to_left" value="1" /><!-- 右到左 -->
            <enum name="top_to_bottom" value="2" /><!-- 上到下 -->
            <enum name="bottom_to_top" value="3" /><!-- 下到上 -->
            <enum name="tl_to_br" value="4" /> <!-- 左上到右下 -->
            <enum name="tr_to_bl" value="5" /> <!-- 右上到左下 -->
            <enum name="br_to_tl" value="6" /> <!-- 右下到左上 -->
            <enum name="bl_to_tr" value="7" /> <!-- 左下到右上 -->
        </attr>
        <!-- 是否自动设置padding（根据阴影位置） -->
        <attr name="md_auto_padding" format="boolean"/>


    </declare-styleable>

</resources>