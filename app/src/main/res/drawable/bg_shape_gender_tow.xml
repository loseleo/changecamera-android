<?xml version="1.0" encoding="utf-8"?>

<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item >
        <shape
            android:shape="oval"
            android:useLevel="false">
            <gradient
                android:startColor="#70B0FF"
                android:endColor="#BB90FF"/>
        </shape>
    </item>

    <item
        android:bottom="3dp"
        android:left="3dp"
        android:right="3dp"
        android:top="3dp">
        <shape
            android:shape="oval"
            android:useLevel="false">
            <solid android:color="@color/white"/>
        </shape>
    </item>
</layer-list>
