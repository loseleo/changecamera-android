<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:id="@android:id/background">

        <selector>
            <item>
                <shape>
                    <gradient
                        android:angle="180"
                        android:endColor="#FE7E2C"
                        android:startColor="#FF3487" />
                    <corners android:radius="6dp" />
                </shape>
            </item>
        </selector>


    </item>

    <item
        android:id="@android:id/progress"
        android:bottom="1dp"
        android:left="1dp"
        android:right="1dp"
        android:top="1dp">
        <clip>
            <selector>
                <item>
                    <shape>
                        <solid android:color="#66000000" />
                        <corners android:radius="6dp" />
                    </shape>
                </item>
            </selector>
        </clip>

    </item>
</layer-list>